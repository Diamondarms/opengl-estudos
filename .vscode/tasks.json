{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",  // Caminho para o g++.exe
            "args": [
                "-g",
                "${file}","${workspaceFolder}\\Utils\\ColorUtil.cpp",
                "-o",
                "${workspaceFolder}\\output\\${fileBasenameNoExtension}.exe",
                "-lglut32","-lopengl32", "-lglu32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
